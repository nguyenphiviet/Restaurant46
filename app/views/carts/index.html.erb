<div class="form_wrapper">
  <div class="container">
    <% if current_cart.present? && current_cart["table"].present? %>
    <div class="col-md-12">
      <h1><%= t "table_reserve" %></h1>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <p for="phone"><%= t "time_start" %></p>
            <label for="phone"><%= current_cart["table"]["time_start"] %></label>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <p for="address"><%= t "price" %></p>
            <label for="address"><%= currency_format current_cart["table"]["price"] %></label>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <div class="col-md-12" id="basket">
      <div class="box">
        <h1 id="cart-title"><%= t ".title" %></h1>
        <% if bookingdetails_exist? %>
        <div class="">
          <table class="table table-warning">
            <thead class = "blue-grey lighten-4">
              <tr>
                <th><%= t "dish" %></th>
                <th><%= t "quantity" %></th>
                <th><%= t "unit_price" %></th>
                <th><%= t "total" %></th>
              </tr>
            </thead>
            <tbody class="cart">
              <% current_cart["detail"].each do |item_id, item_detail| %>
              <%= render "carts/cart_item", item_id: item_id, item_detail: item_detail, show_total: true %>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th colspan="5"><%= t "total" %></th>
                <th class="total"><%= total_cart %></th>
              </tr>
            </tfoot>
          </table>
        </div>
        <div class="box-footer">
          <div class="pull-left">
            <a href="<%= root_path %>" class="btn btn-default"><i class="fa fa-chevron-left"></i><%= t ".continue_order" %></a>
          </div>
          <div class="pull-right">
            <%= link_to t(".checkout"), bookings_path, class: "btn btn-primary" %>
          </div>
        </div>
        <% else %>
        <div class="alert alert-warning">
          <%= t".empty_order" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
