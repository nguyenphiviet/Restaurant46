<section class="blog_list_area">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="row m0">
          <div class="blog_details_inner">
            <div class="blog_details_content">
              <div class="row">
                <div class="col-md-6">
                  <%= show_image @dish %>
                </div>
                <div class="col-md-6">
                  <h3><%= @dish.name %></h3>
                  <h4><%= t ".post_by" %> <a href="#"><%= t ".admin" %></a>
                    <%= t ".at" %> <%= @dish.created_at.strftime("%d %b, %Y") %>
                  </h4>
                  <h3>
                    Price: <span class="red-title">
                      <%= format_currency @dish.price %>
                    </span>
                  </h3>
                </div>
              </div>
              <%= @dish.description.html_safe %>
            </div>

            <div class="blog_details_tags_area">
              <div class="pull-right">
                <h4><%= t ".share" %> :</h4>

                <ul class="social_icon2">
                <%= social_share_button_tag(t(".title_share"),
                  "data-twitter-title": @dish.name,
                  allow_sites: %w(twitter facebook google_plus)) %>
                </ul>
              </div>
            </div>

            <div class="comment_list_area">
              <div class="fb-comments" data-href="<%= dish_url(id: @dish) %>" data-numposts="5" data-width="768"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="blog_right_sidebar">

          <aside class="right_widget category_widget">
            <div class="sidebar_title">
              <h3><%= t ".categories" %></h3>
            </div>
            <ul>
              <% @categories.each do |category| %>
                <li>
                <%= link_to category do %>
                  <i class="fa fa-chevron-right"></i>
                  <%= category.name %>
                <% end %>
                </li>
              <% end %>
            </ul>
          </aside>

          <aside class="right_widget category_widget">
            <div class="sidebar_title">
              <h3>
                <%= link_to t(".order_dish"),
                  booking_details_path(dish_id: @dish.id),
                  method: :post, class: "btn btn-primary full-with" %>
              </h3>
            </div>
          </aside>

      </div>
    </div>
  </div>
</div>
</section>

<div id="fb-root"></div>
