<section class="blog_list_area">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="row m0">
          <div class="blog_details_inner">
            <div class="blog_details_content">
              <%= show_image @dish %>
              <h3><%= @dish.name %></h3>
              <h4><%= t ".post_by" %> <a href="#"><%= t ".admin" %></a>
                <%= t ".at" %> <%= @dish.created_at.strftime("%d %b, %Y") %>
              </h4>
              <%= @dish.description.html_safe %>
            </div>

            <div class="blog_details_tags_area">
              <div class="pull-right">
                <h4><%= t ".share" %> :</h4>

                <ul class="social_icon2">
                <%= social_share_button_tag(t(".title_share"),
                  "data-twitter-title": @dish.name,
                  allow_sites: %w(twitter facebook google_plus)) %>
                </ul>
              </div>
            </div>

            <div class="comment_list_area">
              <div class="fb-comments" data-href="<%= dish_url(id: @dish) %>" data-numposts="5" data-width="768"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="blog_right_sidebar">
          <aside class="right_widget search_widget">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
              </span>
            </div>
          </aside>
          <aside class="right_widget category_widget">
            <div class="sidebar_title">
              <h3><%= t ".categories" %></h3>
            </div>
            <ul>
              <% @categories.each do |category| %>
                <li>
                <%= link_to category do %>
                  <i class="fa fa-chevron-right"></i>
                  <%= category.name %>
                <% end %>
                </li>
              <% end %>
            </ul>
          </aside>
          <aside>
            <%= link_to t("order_dish"), booking_details_path(dish_id: @dish.id),
            method: :post, class: "btn btn-primary" %>
          </aside>
          <aside class="right_widget calender_widget">
           <div class="sidebar_title">
            <h3><%= t ".calendar" %></h3>
          </div>
          <div id="my-calendar"></div>
        </aside>
        <aside class="right_widget recent_widget">
          <div class="sidebar_title">
            <h3><%= t ".recent_review" %></h3>
          </div>
          <div class="media">
            <div class="media-left">
              <%= image_tag "img/blog/recent-post/recent-post-1.jpg" %>
            </div>
            <div class="media-body">
              <h4><a href=""><%= t ".review_name" %></a></h4>
              <h5><%= t ".review_create_at" %></h5>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </div>
</div>
</section>

<div id="fb-root"></div>
